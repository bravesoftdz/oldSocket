<project name="socket" default="empacotar">
	<description>
            Sockets Padrao
    </description>

	<!-- - - - - - - - - - - - - - - - - - 
          target: compilar                      
         - - - - - - - - - - - - - - - - - -->
	<target name="compilar">
		<delete dir="bin" />
		<mkdir dir="bin" />

		<javac srcdir="src/main/java" destdir="bin">
			<classpath>
				<fileset dir="lib">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: empacotar                      
         - - - - - - - - - - - - - - - - - -->
	<target name="empacotar" depends="compilar">
		<mkdir dir="jar" />
		<jar destfile="jar/socket.jar" basedir="bin">
		</jar>
	</target>

</project>
